platform :ios, '15.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_install_all_ios_pods(flutter_application_path)
  plugins_file = File.join(flutter_application_path, '.flutter-plugins-dependencies')
  if File.exist?(plugins_file)
    eval(File.read(plugins_file))
  else
    puts "Warning: .flutter-plugins-dependencies file not found at #{plugins_file}"
  end
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
